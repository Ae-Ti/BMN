option_settings:
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: SPRING_PROFILES_ACTIVE
    value: prod
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: SPRING_DATASOURCE_URL
    value: "jdbc:mysql://<RDS_ENDPOINT>:3306/bmn_prod?useUnicode=true&characterEncoding=utf8&serverTimezone=UTC&useSSL=false"
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: SPRING_DATASOURCE_USERNAME
    value: "<DB_USERNAME>"
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: SPRING_DATASOURCE_PASSWORD
    value: "<DB_PASSWORD>"
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: JWT_SECRET
    value: "<JWT_SECRET>"
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: APP_FRONTEND_URL
    value: "https://your.domain.example"

# Notes:
# - Replace <RDS_ENDPOINT>, <DB_USERNAME>, <DB_PASSWORD>, <JWT_SECRET> with real values or set them in the EB Console.
# - For secrets, prefer AWS Secrets Manager / SSM and reference them in your app rather than committing them here.